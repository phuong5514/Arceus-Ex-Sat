<!DOCTYPE html>
<html>

<head>
  <title>
    Quản lý lớp học
  </title>
  <link rel="stylesheet" href="/css/styles.css">
  <!-- <script src="javascripts/index-script.js" defer></script> -->
</head>

<body>
    <nav>
        <div class="flex-row w-full grow">
            <button class="grow" onclick="window.location.href='/course'">Khóa học</button>
            <button class="grow" onclick="window.location.href='/class'">Lớp học</button>
            <button class="grow" onclick="window.location.href='/'"">Học phần sinh viên</button>
        </div>
    </nav>

    <div class="flex-row align-center justify-right gap-8">
        <button 
            class="pagination-button <%= !results.hasPrevPage ? 'disabled' : ''%>"
            onclick="onPageChange(<%= results.page - 1 %>)"> 
            <
        </button>
        <span>Trang <%= results.page %> / <%= results.totalPages %></span>
        <button 
            class="pagination-button <%= !results.hasNextPage ? 'disabled' : ''%>"
            onclick="onPageChange(<%= results.page + 1 %>)">
            >
        </button>
    </div>

    <div class="main_container flex-column">
      <table class="w-full">
          <thead>
              <tr>
                  <th></th>
                  <th>Mã lớp học</th>
                  <th>Mã môn học</th>
                  <th>Năm học</th>
                  <th>Học kì</th>
                  <th>Giảng viên</th>
                  <th>Số sinh viên tối đa</th>
                  <th>Lịch học</th>
                  <th>Phòng học</th>
                  <th>Ngày tạo</th>
              </tr>
          </thead>

          <tbody>
              <% for (var i=0; i < results.docs.length; i++) { %>
              <tr class="table-row" onclick="window.location.href='/class/<%= results.docs[i]._id %>'">
                  <td></td>
                  <td><%= results.docs[i]._id %></td>
                  <td><%= results.docs[i].course_id %></td>
                  <td><%= results.docs[i].academic_year %></td>
                  <td><%= results.docs[i].semester %></td>
                  <td><%= results.docs[i].lecturer %></td>
                  <td><%= results.docs[i].max_students %></td>
                  <td><%= results.docs[i].schedule %></td>
                  <td><%= results.docs[i].classroom %></td>
                  <td><%= results.docs[i].created_at %></td>
                </tr>
              <% } %>
              <tr class="table-row" onclick="window.location.href='/class/create'">
                  <td colspan="10" class="text-center">Thêm lớp học mới</td>
              </tr>
          </tbody>
      </table>
      <% if (results.docs.length == 0) { %>
        <div class="empty-table">(Không có lớp học)</div>
      <% } %>
  </div>
  <!-- Pagination Script -->
  <script>
    function onPageChange(page) {
      const url = new URL(window.location.href);
      url.searchParams.set('page', page);
      url.searchParams.set('limit', '<%= results.limit %>');
      window.location.href = url.toString();
    }
  </script>
</body>
</html>