<!DOCTYPE html>
<html lang="<%= lang || 'vi' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title> <%= t.details %>: <%= course.course_name %> </title>
  <link rel="stylesheet" href="/css/styles.css">
  <base href="/<%= lang ? lang + '/' : '' %>">
</head>

<body>
  <div class="flex-column m-16 gap-16">
    <div class="flex-row space-between">
      <h1> <%= course._id %> - <%= course.course_name %></h1>
      <button onclick="window.location.href='course'"> <%= t.go_back %> </button>
    </div>
    <div class="grid box bg-grey-100 align-self-center align-center px-32 pt-16 pb-32 min-w-600 max-w-800">
      <div class="grid-colspan-3"></div>
      <h2 class="grid-colspan-6 text-center"> <%= t.course_information %> </h2>
      <button type="button" class="grid-colspan-3 h-full" onclick="window.location.href='course/edit/<%= course._id%>'" > <%= t.change %> </button>
      <div class="grid-colspan-12 message-panel" id="message" style="display: none;"></div>
      <label class="grid-colspan-4 text-left font-bold border-right px-4 "> <%= t.course_code %> </label>
      <div class="grid-colspan-8 ml-4">
        <p class="grid-colspan-8 w-full border-box"><%= course._id %></p>
      </div>
      <label class="grid-colspan-4 text-left font-bold border-right px-4 "> <%= t.course_name %> </label>
      <div class="grid-colspan-8 ml-4">
        <p class="grid-colspan-8 w-full border-box"><%= course.course_name %></p>
      </div>
      <label class="grid-colspan-4 text-left font-bold border-right px-4 "> <%= t.major %> </label>
      <div class="grid-colspan-8 ml-4">
        <p class="w-full border-box">
          <% if (course.department) { %>
            <%= `${course.department} - ${departments.find(d => d._id === course.department)?.department_name || ''}` %>
          <% } else { %>
            <%= t.empty %>
          <% } %>
        </p>
      </div>
      <label class="grid-colspan-4 text-left font-bold border-right px-4 "> <%= t.course_description %> </label>
      <div class="grid-colspan-8 ml-4">
        <p class="w-full border-box"><%= course.description || t.empty %></p>
      </div>
      <label class="grid-colspan-4 text-left font-bold border-right "> <%= t.credits %> </label>
      <div class="grid-colspan-8 ml-4">
        <p class="border-box w-full"><%= course.credits || t.empty %></p>
      </div>
      <label class="grid-colspan-4 text-left font-bold border-right px-4"> <%= t.prerequisite_course_code %> </label>
      <div class="grid-colspan-8 ml-4">
        <p class="w-full border-box">
          <% if (course.prerequisite_course) { %>
            <%= `${course.prerequisite_course} - ${prerequisite_courses.find(c => c._id === course.prerequisite_course)?.course_name || ''}` %>
          <% } else { %>
            <%= t.empty %>
          <% } %>
        </p>
      </div>
      <label class="grid-colspan-4 text-left font-bold border-right px-4 "> <%= t.course_status %> </label>
      <div class="grid-colspan-8 ml-4">
        <p class="w-full border-box">
          <%= course.is_active ? t.open : t.closed %>
        </p>
      </div>
      <label class="grid-colspan-4 text-left font-bold border-right px-4"> <%= t.creation_date %> </label>
      <div class="grid-colspan-8 ml-4">
        <p class="w-full border-box"><%= course.created_at.toLocaleString('vi-VN') %></p>
      </div>
    </div>
  </div>
</body>
</html>