<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="main_container"> 
        <list class="header">
            <li class="header_item clear_button">Thêm sinh viên</li>
            <li class="header_item clear_button active">Xóa sinh viên</li>
            <li class="header_item clear_button">Sửa thông tin sinh viên</li>
            <li class="header_item searchbar">
                <form action="/search" method="POST">
                    <input type="text" name="search" class="input" placeholder="Tìm kiếm...">
                    <button type="submit" class="button">Tìm kiếm</button>
                </form>
            </li>
        </list>

        <table>
            <tr>
                <th>MSSV</th>
                <th>Họ tên</th>
                <th>Ngày sinh</th>
                <th>Giới tính</th>
                <th>Khoa</th>
                <th>Khóa</th>
                <th>Chương trình</th>
                <th>Địa chỉ</th>
                <th>Email</th>
                <th>SĐT</th>
                <th>Tình trạng</th>    
            </tr>
            <% for (var i = 0; i < students.length; i++) { %>
                <tr>
                    <td><%= students[i].student_id %></td>
                    <td><%= students[i].name %></td>
                    <td><%= students[i].birthdate %></td>
                    <td><%= students[i].gender %></td>
                    <td><%= students[i].major %></td>
                    <td><%= students[i].class_year %></td>
                    <td><%= students[i].program %></td>
                    <td><%= students[i].address %></td>
                    <td><%= students[i].email %></td>
                    <td><%= students[i].phone_number %></td>
                    <td><%= students[i].status %></td>
                </tr>
            <% } %>
               
        </table>

        <footer>
            a
        </footer>
    </div>

</body>
</html>
