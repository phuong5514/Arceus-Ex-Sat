          <button class="flex-row-item" id="add-student-btn" onclick="onAddStudentClicked()">Thêm sinh viên</button>
          <button class="flex-row-item" id="remove-student-btn" onclick="onRemoveStudentClicked()">Xóa sinh
            viên</button>
          <button class="flex-row-item" id="edit-student-btn" onclick="onEditStudentClicked()">Sửa thông tin sinh
            viên</button>
          <button class="flex-row-item" onclick="window.location.href='/category'">
              Quản lý danh mục
          </button>
          <button class="flex-row-item" onclick="window.location.href='/import'">Import</button>
          <button class="flex-row-item" id="export-download-button" onclick="exportData()"">Export All</button>
          <select id="export-format" class="flex-row-item">
            <option value="json">as JSON</option>
