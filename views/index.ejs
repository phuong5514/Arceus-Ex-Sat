                    <td>
                      <input type="text" id="<%= mode %>-class_year" name="class_year" placeholder="Khóa" size="5">
                    </td>
                    <td>
                      <select name="program" id="<%= mode %>-program">
                        <option value="" disabled selected>--Chọn chương trình--</option>
